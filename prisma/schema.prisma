model Profile {
  id          String   @id @default(cuid())
  userId      String
  name        String
  avatar      String
  aboutMe     String
  skills      String[]
  achievements String[]
  education   String[]
  researchExperience String[]
  researchInterest String[]
  collabStatus String[]
}

model Workspace {
  id          String   @id @default(cuid())
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  // members     Member[]
}

model Member {
  id          String    @id @default(cuid())
  userId      String
  role        String?
  name        String?
  email       String?
  avatar      String?
  // workspaceId String
  // workspace   Workspace @relation(fields: [workspaceId], references: [id])
}

model ResearchPosts {
  id          String   @id @default(cuid())
  userId      String
  name        String
  avatar      String
  title       String
  author      String
  document    String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

