generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:scholarspaceadmin123@db.eeikbrtyntwckpyfphlm.supabase.co:5432/postgres"
}

model Workspace {
  id          String   @id @default(cuid())
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String
  description String
  members     Member[]
}

model Member {
  id          String    @id
  role        String?
  name        String?
  email       String?
  avatar      String?
  workspaceId String
  workspace   Workspace @relation(fields: [workspaceId], references: [id])
}

